<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-white px-10 py-5 text-black">
    <h1>Create a new post</h1>
    <hr class="opacity-10 bg-black mt-3">
    <form action="/create_post" method="post" enctype="multipart/form-data" class="w-1/3 max-sm:w-full max-md:w-full max-lg:w-2/3 max-xl:w-2/3">
        <input class="block px-3 py-2 mt-2 w-full" type="file" name="post_image">
        <input class="block px-3 py-2 border-2 rounded-md mt-2 text-black w-full" type="text" placeholder="Title" name="title">
        <textarea class="block h-60 px-3 py-2 border-2 rounded-md mt-2 text-black w-full" type="text" placeholder="Description" name="description"></textarea>
        <input class="block px-3 py-2  rounded-md bg-red-600 mt-2 text-white w-full" type="submit" value="create">
    </form>
</div>
<% include ./partials/footer.ejs %>